<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBEBEB">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/imageView22"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_marginTop="10px"
            app:srcCompat="@drawable/whiterec" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="208dp"
            android:layout_height="63dp"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="70px"
            android:text="Mark all as read"
            android:textColor="@color/blue"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130px"
            android:layout_marginTop="50px"
            android:text="Notifications"
            android:textSize="26sp" />

        <ImageView
            android:id="@+id/notiback"
            android:layout_width="36dp"
            android:layout_height="32dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/backblackarrow" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_marginTop="250px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="65dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginLeft="3px"
                        android:layout_marginTop="50px"
                        android:backgroundTint="@color/blue"
                        android:text="All"
                        app:layout_constraintStart_toStartOf="parent" />

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="68dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="20px"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/gray"
                        android:text="Order Updates"
                        android:textColor="#070707"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/button10"
                        android:layout_width="95dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2px"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="5px"
                        android:layout_weight="1"
                        android:backgroundTint="@color/gray"
                        android:text="Promotions"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/button11"
                        android:layout_width="66dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"

                        android:layout_weight="1"
                        android:backgroundTint="@color/gray"
                        android:text="Updates"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toTopOf="parent" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <ImageView
            android:id="@+id/imageView41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/notificationsimg"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="25dp"/>



        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2000px"
            android:layout_marginLeft="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.916"
            app:srcCompat="@drawable/icline" />

        <ImageView
            android:id="@+id/imageView43"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2050px"
            android:layout_marginLeft="140dp"
            app:srcCompat="@drawable/bell" />

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="40dp"
            android:layout_height="42dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="2050px"
            android:layout_marginLeft="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.083"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/blackhome" />

        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="44dp"
            android:layout_height="40dp"
            android:layout_marginTop="2050px"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="250dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.602"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/iccart" />

        <ImageView
            android:id="@+id/imageView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="2050px"
            android:layout_marginLeft="340dp"
            app:layout_constraintHorizontal_bias="0.844"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/icprofile" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>